{
  "extends": [
    "eslint:recommended",
    "prettier",
    "plugin:import/recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "plugins": ["import"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "curly": ["error", "multi-line"],
    "linebreak-style": ["error", "unix"],
    "max-len": [
      "error",
      80,
      {
        "ignoreComments": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "new-cap": "off",
    "no-case-declarations": "error",
    "no-var": "error",
    "prefer-const": "error",
    "no-unused-vars": ["error", { "ignoreRestSiblings": true }],
    "import/order": "error"
  },
  "env": {
    "node": true,
    "es6": true
  },
  "ignorePatterns": [
    "__tests__/code/fixtures/",
    "node_modules",
    "build",
    "coverage"
  ]
}
